#!/usr/bin/env bash

run() {
    sudo lxc exec container -- $*
}    

run_script() {
    if [ ! -f $1 ] ; then
        echo "invalid script path!"
        exit 1
    fi
    LXD_HOME="$(lxc exec container -- 'echo $HOME')"
    lxc file push $1 container/
    lxc exec container -- chmod +x /$1
    lxc exec container -- /$1
}
