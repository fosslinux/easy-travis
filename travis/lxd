#!/bin/bash

IMAGE=${1}

# update
sudo apt-get -qq update
sudo apt-get -qq dist-upgrade

# install lxd
sudo apt-get -qq install lxd

# initalize lxd
yes '' | sudo lxd init

# add to lxd group
sudo usermod -aG lxd travis
# reload environment
exec sg lxd newgrp `id -gn` #

# launch lxd container
lxc launch ${IMAGE} container
